<UserControl x:Class="My_steam_client.Templates.PingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:wpfAnimatedGif="http://wpfanimatedgif.codeplex.com"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:My_steam_client.Templates"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="Black">
    <Grid>
        <Image x:Name="GifImage"/>
        <TextBlock x:Name="LoadingTextBlock"
            Text="Trying to connect to server"
                   Foreground="#FF959595"
                   FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                   FontSize="25"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" Margin="0,280,0,0"
                   Panel.ZIndex="2"/>
    </Grid>
</UserControl>
