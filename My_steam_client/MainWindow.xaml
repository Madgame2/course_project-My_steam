<Window x:Class="My_steam_client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:My_steam_client.Templates"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <!-- Основной контент -->
        <Grid x:Name="MainGrid">
        </Grid>

        <!-- SideBar, помещаем поверх основного Grid -->
        <local:SideBar 
    Width="250" 
    HeightPercent="90.0" 
    Background="Gray" 
    BorderRadius="20" 
    VerticalAlignment="Center" 
    HorizontalAlignment="Left"
    RenderTransformOrigin="0,0"
    Style="{StaticResource SideBar_styles}">
            <StackPanel Style="{StaticResource Main_buttons}">
                <Button>hello</Button>
                <Button>hello</Button>
                <Button>hello</Button>
                <Button>hello</Button>
            </StackPanel>
        </local:SideBar>
    </Grid>
</Window>
