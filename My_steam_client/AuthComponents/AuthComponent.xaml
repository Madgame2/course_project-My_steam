<UserControl x:Class="My_steam_client.AuthComponents.AuthComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:My_steam_client.AuthComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.3*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition Width="0.15*"/>
                <ColumnDefinition Width="0.7*"/>
                <ColumnDefinition Width="0.1*"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="1"
                Source="/AuthComponents/Icon.png"
                Height="90"/>
            <TextBlock Margin="10,0,0,0" Grid.Column="2" Text="Application Name"
                       FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                       Foreground="#FFC6C6C6"
                       VerticalAlignment="Center"
                       FontSize="40"
                       FontWeight="Bold"/>
        </Grid>
        
        <Grid Grid.Row="1" Margin="40,0,40,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.5*"/>
                    <RowDefinition Height="0.5*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="0,0,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="0.5*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Email" VerticalAlignment="Center" HorizontalAlignment="Right"
                                   FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                                   Foreground="#FFC6C6C6"/>
                        <TextBlock Grid.Row="1" Text="Password" VerticalAlignment="Center" HorizontalAlignment="Right"
                                   FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                                   Foreground="#FFC6C6C6"/>

                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.5*"/>
                            <RowDefinition Height="0.5*"/>
                        </Grid.RowDefinitions>


                        <TextBox Grid.Row="0" Height="22"
                                 VerticalAlignment="Center" Margin="10,0,100,0"
                                 Background="Transparent"
                                 Foreground="#FF909090"
                                 VerticalContentAlignment="Center"
                                 FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                                 FontSize="14"
                                 CaretBrush="#FF909090"
                                 TextChanged="email_textChanged"/>
                        <PasswordBox Grid.Row="1" Height="22"
                                 VerticalAlignment="Center" Margin="10,0,100,0"
                                 Background="Transparent"
                                 Foreground="#FF909090"
                                 VerticalContentAlignment="Center"
                                 FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                                 FontSize="14"
                                 CaretBrush="#FF909090"
                                 PasswordChanged="password_textChanged"/>
                    </Grid>


                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.2*"/>
                        <ColumnDefinition Width="0.8*"/>
                    </Grid.ColumnDefinitions>


                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.4*"/>
                            <RowDefinition Height="0.6*"/>
                        </Grid.RowDefinitions>

                        <CheckBox Grid.Row="0"
          Content="Remember password?"
          FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
          FontSize="13"
          Foreground="#FFC6C6C6"
          Background="Transparent"
          Margin="10,0,0,0"
          VerticalAlignment="Center"
          HorizontalAlignment="Left"
          Cursor="Hand">
                            <CheckBox.Style>
                                <Style TargetType="CheckBox">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="CheckBox">
                                                <StackPanel Orientation="Horizontal">
                                                    <Border x:Name="CheckBoxBorder"
                                    Width="16"
                                    Height="16"
                                    Background="Transparent"
                                    BorderBrush="#FFC6C6C6"
                                    BorderThickness="1"
                                    Margin="0,0,5,0">
                                                        <Path x:Name="CheckMark"
                                      Data="M0,4 L2,6 L6,0"
                                      Stroke="Transparent"
                                      StrokeThickness="2"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      SnapsToDevicePixels="True"/>
                                                    </Border>
                                                    <ContentPresenter VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                                                </StackPanel>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="CheckMark" Property="Stroke" Value="#4EA5F8"/>
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="CheckBoxBorder" Property="Background" Value="#E0E0E0"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </CheckBox.Style>
                        </CheckBox>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>

                            <Button x:Name="LogIn_button"
                                Grid.Column="0" Margin="10,5,5,10"
                                    Content="Login"
                                    HorizontalContentAlignment="Left"
                                    Padding="10,0,0,0"
                                    FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                                    Background="#FF7B7B7B"
                                    Foreground="#FFE6E6E6"
                                    FontSize="16"
                                    BorderBrush="Transparent"
                                    IsEnabled="False"/>
                            <Button Grid.Column="1"
                                    Content="Cancel"
                                    Margin="10,5,5,10"
                                    Padding="10,0,0,0"
                                    FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                                    FontSize="16"
                                    HorizontalContentAlignment="Left"
                                    Click="CancleButton_Click">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="#FF7B7B7B"/>
                                        <Setter Property="Foreground" Value="#FFE6E6E6"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                        <Setter Property="Cursor" Value="Hand"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" Margin="40,0,40,0">
            <Rectangle Height="1" Fill="#FF767676" VerticalAlignment="Top" HorizontalAlignment="Stretch"/>

            <Grid Margin="0,20,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*"/>
                    <ColumnDefinition Width="0.6*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Can't log in?"
                               FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                               Foreground="#FFE6E6E6"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               FontSize="14"
                               Margin="0,0,10,0"/>
                    <TextBlock Grid.Row="1" Text="No account?"
                               FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                               Foreground="#FFE6E6E6"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               FontSize="14"
                               Margin="0,0,10,0"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.5*"/>
                        <RowDefinition Height="0.5*"/>
                    </Grid.RowDefinitions>

                    <Button Grid.Row="0"
                            Margin="5,5,5,5"
                            Content="Can't log into my account..."
                            HorizontalContentAlignment="Left"
                            Padding="10,0,0,0"
                            FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                            Foreground="#FFE6E6E6"
                            Background="#FF7B7B7B"
                            FontSize="14"/>
                    <Button Grid.Row="1"
                            Margin="5,5,5,5"
                            Content="Create a new account"
                            HorizontalContentAlignment="Left"
                            FontFamily="pack://application:,,,/resources/Fonts/#Rajdhani"
                            Padding="10,0,0,0"
                            Foreground="#FFE6E6E6"
                            Background="#FF7B7B7B"
                            FontSize="14"
                            Click="RegistratoinButton_Click"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
